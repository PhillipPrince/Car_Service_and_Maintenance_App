<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/maroon"
                android:gravity="right"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add New Car"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom"
                    android:textSize="30dp"
                    android:layout_marginRight="20dp"
                    ></TextView>

                <ImageView
                    android:id="@+id/saveCar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/save"
                    android:layout_marginRight="20dp"
                    ></ImageView>

                <ImageView
                    android:id="@+id/cancel"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/cancelicon"
                    ></ImageView>



            </LinearLayout>
            <ImageView android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/dashboad"
                ></ImageView>



            <EditText
                android:id="@+id/model"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Car Model"
                android:inputType="text"
                android:layout_marginTop="10dp"
                ></EditText>

            <EditText
                android:id="@+id/fuelType"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Fuel"
                android:inputType="text"
                android:layout_marginTop="10dp"
                ></EditText>

            <EditText
                android:id="@+id/modelYear"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Model Year"
                android:inputType="number"
                android:layout_marginTop="10dp"
                ></EditText>

            <EditText
                android:id="@+id/engine"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Engine"
                android:inputType="text"
                android:layout_marginTop="10dp"
                ></EditText>

            <EditText
                android:id="@+id/chasisNo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Chassis Number"
                android:inputType="text"
                android:layout_marginTop="10dp"
                ></EditText>

            <EditText
                android:id="@+id/engineNumber"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Engine Number"
                android:inputType="text"
                android:layout_marginTop="10dp"
                ></EditText>

            <EditText
                android:id="@+id/numberPlate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Number Plate"
                android:inputType="text"
                android:layout_marginTop="10dp"
                ></EditText>

            <EditText
                android:id="@+id/nextService"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Next Service"
                android:inputType="text"
                android:layout_marginTop="10dp"
                ></EditText>

            <EditText
                android:id="@+id/mile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Mileage"
                android:inputType="text"
                android:layout_marginTop="10dp"
                ></EditText>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/lastInsurance"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="Last Insurance"
                    android:inputType="date"
                    android:layout_marginTop="10dp"
                    ></EditText>
                <TextView
                    android:id="@+id/cal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/calendaricon"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <EditText
                    android:id="@+id/nextInsurance"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:hint="Next Insurance"
                    android:inputType="date"></EditText>
                <TextView
                    android:id="@+id/ncal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/calendaricon"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>